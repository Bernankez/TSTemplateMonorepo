{
  "name": "@ts-template/monorepo",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.3.1",
  "description": "",
  "author": {
    "name": "Cole",
    "email": "bernankez@qq.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bernankez/TSTemplateMonorepo.git"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "clean": "rimraf packages/*/{dist,es,lib}",
    "build": "pnpm clean && pnpm -r -F \"./packages/*\" build",
    "release": "bumpp -r",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "eslint . --fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@bernankez/eslint-config": "^0.4.2",
    "@types/node": "^18.16.1",
    "bumpp": "^9.1.0",
    "changelogithub": "^0.12.9",
    "eslint": "^8.39.0",
    "happy-dom": "^9.9.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "rimraf": "^3.0.2",
    "tsup": "^6.7.0",
    "tsx": "^3.12.6",
    "typescript": "^5.0.4",
    "unbuild": "^1.2.1",
    "vite": "^4.3.3",
    "vite-plugin-dts": "^2.3.0",
    "vitest": "^0.30.1"
  },
  "lint-staged": {
    "*": [
      "eslint --fix"
    ]
  }
}
